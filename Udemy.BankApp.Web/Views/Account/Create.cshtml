@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UserListModel


<div class="row mt-3">
    <div class="col-6">
        <p> Eklenecek Kişinin Bilgileri </p>
        <p>@Model.Name</p>
        <p>@Model.Surname</p>
        <p><getAccountCount application-user-id="@Model.Id"></getAccountCount></p>

    </div>
    <div class="col-6">

        <form asp-action="Create" asp-controller="Account" method="post">
            <input type="hidden"name="ApplicationUserId" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label">Hesap Numarası:</label>
                <input class="form-control" type="number"name="AccountNumber" value="" />
            </div>
            <div class="mb-3">
                <label class="form-label">Bakiye:</label>
                <input class="form-control" type="number"name="Balance" value="" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger">Ekle</button>
            </div>


        </form>
    </div>

</div>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SelectList

@* 
SenderId bu parayı kim göderiyor, AccountID YANİ NEREYE GİDECEK, Amount kaç para gidecek.
    SenderId zaten viewbagın içinde,

*@
<div class="mt-3">
    <form asp-action="SendMoney" asp-controller="Account" method="post" class="w-75 mx-auto">
        <input type="hidden" name="SenderId" value="@ViewBag.SenderId" />
        <div class="mb-3">
            <label>Göndereceğiniz Hesap Numarası:</label>
            <select class="form-select" asp-items="@Model" name="AccountId">
            </select>
        </div>
        <div class="mb-3">
            <label>Göndereceğiniz Tutar:</label>
            <input type="number" name="Amount" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Para gönder.</button>
        </div>

    </form>

</div>
